# OpenAI API Configuration
OPENAI_API_KEY=your-api-key-here
OPENAI_ORG_ID=your-org-id-here  # Optional

# Model Configuration
OPENAI_MODEL=gpt-4
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=2000
OPENAI_TOP_P=1.0
OPENAI_FREQUENCY_PENALTY=0.0
OPENAI_PRESENCE_PENALTY=0.0

# TMR Framework Configuration
TMR_VERIFICATION_DEPTH=adaptive  # Options: quick, adaptive, deep
TMR_CONFIDENCE_THRESHOLD=0.7
TMR_MAX_RETRIES=3
TMR_TIMEOUT=30

# Rate Limiting Configuration
OPENAI_RPM=3500  # Requests per minute
OPENAI_TPM=90000  # Tokens per minute
OPENAI_RATE_LIMIT_BUFFER=0.9  # Use 90% of limit to be safe

# Logging Configuration
TMR_LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
TMR_LOG_FILE=tmr.log  # Optional: Leave empty to disable file logging

# Cache Configuration
TMR_CACHE_ENABLED=true
TMR_CACHE_SIZE=1000
TMR_CACHE_TTL=3600  # Time to live in seconds

# Feature Flags
TMR_ENABLE_ASYNC=true
TMR_ENABLE_STREAMING=false
TMR_ENABLE_COST_TRACKING=true
